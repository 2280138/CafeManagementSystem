@model IEnumerable<CafeManagement.Models.Recipe>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Index";
}

<h1 style="color: #5c4033;">Recipes</h1>

<p>
    <a asp-action="Create" class="btn-modern">+ Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ingredient)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuantityRequired)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MenuItem)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ingredient)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuantityRequired)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MenuItem.MenuItemId)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.RecipeId" class="btn-modern btn-modern-light" style="margin-right: 5px;">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.RecipeId" class="btn-modern" style="margin-right: 5px;">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.RecipeId" class="btn-modern btn-modern-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
