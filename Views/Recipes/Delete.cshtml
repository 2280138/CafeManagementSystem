@model CafeManagement.Models.Recipe

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Delete";
}

<h1 style="color: #5c4033;">Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4 style="color: #5c4033;">Recipe</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Ingredient)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ingredient)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.QuantityRequired)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.QuantityRequired)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MenuItem)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MenuItem.MenuItemId)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="RecipeId" />
        <input type="submit" value="🗑️ Delete" class="btn-modern btn-modern-danger" />
        <a asp-action="Index" class="btn-modern btn-modern-light">← Cancel</a>
    </form>
</div>
