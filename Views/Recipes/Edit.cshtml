@model CafeManagement.Models.Recipe

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Edit";
}

<h1 style="color: #5c4033;">Edit</h1>

<h4 style="color: #5c4033;">Recipe</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RecipeId" />
            <div class="form-group">
                <label asp-for="MenuItemId" class="control-label"></label>
                <select asp-for="MenuItemId" class="form-control" asp-items="ViewBag.MenuItemId"></select>
                <span asp-validation-for="MenuItemId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ingredient" class="control-label"></label>
                <input asp-for="Ingredient" class="form-control" />
                <span asp-validation-for="Ingredient" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuantityRequired" class="control-label"></label>
                <input asp-for="QuantityRequired" class="form-control" />
                <span asp-validation-for="QuantityRequired" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <input type="submit" value="💾 Save" class="btn-modern btn-modern-danger" />
                <a asp-action="Index" class="btn-modern btn-modern-light ms-2">← Back to List</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
