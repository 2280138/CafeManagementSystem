@model IEnumerable<CafeManagement.Models.Billing>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Index";
}

<h2 style="color: #5c4033;">Billings</h2>

<p>
    <a asp-action="Create" class="btn-modern">+ Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PaymentMethod)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AmountPaid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PaymentMethod)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AmountPaid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Order.OrderId)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.BillId" class="btn-modern btn-modern-light" style="margin-right: 5px;">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.BillId" class="btn-modern" style="margin-right: 5px;">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.BillId" class="btn-modern btn-modern-danger">Delete</a>

            </td>
        </tr>
}
    </tbody>
</table>
