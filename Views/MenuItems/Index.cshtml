@model IEnumerable<CafeManagement.Models.MenuItem>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Index";
}

<h1 style="color: #5c4033;">Menu Items</h1>

<p>
    <a asp-action="Create" class="btn-modern">+ Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsAvailable)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsAvailable)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.MenuItemId" class="btn-modern btn-modern-light" style="margin-right: 5px;">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.MenuItemId" class="btn-modern" style="margin-right: 5px;">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.MenuItemId" class="btn-modern btn-modern-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
